<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <!-- Empty State with Ripple Circles -->
        <FrameLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Ripple Circle 1 (Largest) -->
            <View
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_ripple"
                android:alpha="0.15" />

            <!-- Ripple Circle 2 -->
            <View
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_ripple"
                android:alpha="0.2" />

            <!-- Ripple Circle 3 -->
            <View
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_ripple"
                android:alpha="0.25" />

            <!-- Ripple Circle 4 (Smallest) -->
            <View
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_ripple"
                android:alpha="0.3" />

            <!-- Center Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No paired device, pull down to refresh"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Device Found Card (when device is found but not connected) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deviceFoundCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Device Icon/Image -->
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/ic_launcher_foreground"
                    android:layout_marginEnd="16dp" />

                <!-- Info Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Device Name -->
                    <TextView
                        android:id="@+id/txtFoundDeviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ganyu Drive"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <!-- Device Address -->
                    <TextView
                        android:id="@+id/txtFoundDeviceAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DC:1E:D5:6F:38:52"
                        android:textSize="11sp"
                        android:textColor="#999999" />

                </LinearLayout>

                <!-- Connect Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConnectDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Connect"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Connected Device Card (when connected but no navigation) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deviceConnectedCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Device Icon/Image -->
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/ic_launcher_foreground"
                    android:layout_marginEnd="16dp" />

                <!-- Info Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Device Name -->
                    <TextView
                        android:id="@+id/txtConnectedDeviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ganyu Drive"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp" />

                    <!-- Device Address -->
                    <TextView
                        android:id="@+id/txtConnectedDeviceAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DC:1E:D5:6F:38:52"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:layout_marginBottom="4dp" />

                    <!-- Connection Status -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="● Connected"
                        android:textSize="12sp"
                        android:textColor="#4CAF50" />

                </LinearLayout>

                <!-- Disconnect Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDisconnectDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Disconnect"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#F44336"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Navigation Card (when connected and navigating) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deviceCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Navigation Icon -->
                <ImageView
                    android:id="@+id/imgTurnIcon"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginBottom="12dp" />

                <!-- Road Name -->
                <TextView
                    android:id="@+id/txtRoadName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Road Name"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="6dp" />

                <!-- Road Additional Info -->
                <TextView
                    android:id="@+id/txtRoadAdditionalInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next: Road Info"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <!-- Distance and Time Row -->
                <LinearLayout
                    android:id="@+id/layoutInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Distance Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/txtDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#EEEEEE"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- Time Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textSize="11sp"
                            android:textColor="#999999"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/txtTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>